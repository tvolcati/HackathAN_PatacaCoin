<!-- app/views/archives/edit.html.erb -->
<h1>Edit Archive</h1>

<%= simple_form_for @archive do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: "Título" %>
    <%= f.input :date, as: :date, label: "Data" %>
    <%= f.input :ambito_e_conteudo, label: "Âmbito e Conteúdo" %>
    <%= f.input :estado_de_ponto_de_acesso, collection: ['São Paulo', 'Rio de Janeiro', 'Minas Gerais', 'Outro'], prompt: "Select Estado de Ponto de Acesso", label: "Estado de Ponto de Acesso" %>
    <%= f.input :pontos_de_acesso_e_indexacao_de_assuntos, label: "Pontos de Acesso e Indexação de Assuntos" %>
    <%= f.input :subject, label: "Subject" %>
    <%= f.input :description, label: "Description" %>
    <%= f.input :language, label: "Language" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save Changes' %>
  </div>
<% end %>
  
<%= link_to 'Back to Archive', archive_path(@archive), class: 'btn btn-default' %>

<style>
  .btn {
    margin: 5px;
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }
  .btn:hover {
    background-color: #0056b3;
  }
</style>
