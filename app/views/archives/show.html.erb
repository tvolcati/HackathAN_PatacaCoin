<!-- app/views/archives/show.html.erb -->
<h1>Archive Details</h1>

<div class="archive-details">
  <p><strong>Title:</strong> <%= @archive.title %></p>
  <p><strong>Subject:</strong> <%= @archive.subject %></p>
  <p><strong>Description:</strong> <%= @archive.description %></p>
  <p><strong>Language:</strong> <%= @archive.language %></p>
  <p><strong>Date:</strong> <%= @archive.date.strftime("%d/%m/%Y") if @archive.date %></p>
  <p><strong>Âmbito e Conteúdo:</strong> <%= @archive.ambito_e_conteudo %></p>
  <p><strong>Estado de Ponto de Acesso:</strong> <%= @archive.estado_de_ponto_de_acesso %></p>
  <p><strong>Pontos de Acesso e Indexação de Assuntos:</strong> <%= @archive.pontos_de_acesso_e_indexacao_de_assuntos %></p>

  <%# Assuming file uploads are still relevant %>
  <% if @archive.file.attached? %>
    <%= link_to 'Download File', rails_blob_path(@archive.file, disposition: "attachment"), class: 'button' %>
  <% end %>

  <%= link_to 'Edit', review_archive_path(@archive), class: 'button' %>
</div>

<style>
  .button {
    margin: 5px;
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }
  .button:hover {
    background-color: #0056b3;
  }
</style>
